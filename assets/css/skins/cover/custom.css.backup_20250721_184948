/* Custom darker purple-blue-orange rainbow skin for HTML5 audio player */
.custom audio {
    background: linear-gradient(45deg, #663399, #4a5568, #e67e22, #2c3e50, #8e44ad, #d35400);
    border-radius: 10px;
    width: 100%;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

.custom audio::-webkit-media-controls-panel {
    background: linear-gradient(45deg, #663399, #4a5568, #e67e22, #2c3e50, #8e44ad, #d35400);
}

.custom audio::-webkit-media-controls-play-button,
.custom audio::-webkit-media-controls-timeline,
.custom audio::-webkit-media-controls-volume-slider {
    filter: brightness(1.2) contrast(1.2);
}

.custom .bfp-player-title {
    color: #fff;
    background: linear-gradient(135deg, #8e44ad 0%, #e67e22 100%);
