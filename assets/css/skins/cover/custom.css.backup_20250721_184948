    border-radius: 10px 10px 0 0;
    font-weight: bold;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
}

.custom .bfp-player-wrapper {
    background: linear-gradient(135deg, #9b59b6 0%, #e67e22 100%);
