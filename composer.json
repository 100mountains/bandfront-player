{
    "name": "bandfront/player",
    "description": "Bandfront Player WordPress plugin",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Bandfront",
            "email": "support@nowhere.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "bfp\\": "src/"
        },
        "files": [
            "builders/builders.php"
        ],
        "classmap": [
            "vendor/php-mp3/class.mp3.php",
            "src/Modules/GoogleDrive/GoogleDriveClient.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "bfp\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "test": "phpunit",
        "cs": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}